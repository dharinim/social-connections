<script id="render_user_list" type="text/template">
              <div class="table-responsive">
                <table id="mytable" class="table table-bordred table-striped">
                  <thead>
                    <th id="sortid">ID</th>
                    <th id="sortname">Name</th>
                    <th id="sortlinkedin">LinkedIn Connections</th>
                    <th id="sortfacebook">Facebook Connections</th>
                    <th id="sorttwitter">Twitter Followers</th>
                    <th id="sortconnection">Social Connection Index</th>
                  </thead>
                  <tbody>
                    {{#each users}}
                      <tr>
                        <td>{{id}}</td>
                        <td>{{name}}</td>
                        <td>{{linkedin_connections}}</td>
                        <td>{{facebook_connections}}</td>
                        <td>{{twitter_followers}}</td>
                        <td>{{social_connection_index}}</td>

                        <td><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit" data-id= {{id}} data-name= {{name}} data-linkedin_connections= {{linkedin_connections}} data-facebook_connections= {{facebook_connections}}  data-twitter_followers= {{twitter_followers}} data-social_connection_index= {{social_connection_index}}><span class="glyphicon glyphicon-pencil"></span></button></p></td>
                      </tr>
                    {{/each}}
                  </tbody>
                </table>

                <div class="clearfix">
                </div>
              </div> 
</script>